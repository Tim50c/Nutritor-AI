{
  "expo": {
    "name": "Nutritor AI",
    "slug": "nutritorai",
    "scheme": "nutriai",
    "version": "1.0.0",
    "owner": "tduongvn",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "plugins": [
      "expo-router",
      "expo-notifications",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Nutritor AI to access your camera to scan barcodes and recognize food."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font"
    ],
    "android": {
      "package": "com.tduongvn.nutritorai",
      "versionCode": 1,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "ios": {
      "bundleIdentifier": "com.tduongvn.nutritorai",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Nutritor AI needs access to your camera to scan barcodes and recognize food for nutritional analysis."
      }
    },
    "extra": {
      "eas": {
        "projectId": "c543b4f1-dc65-4a67-aaf5-74627b712a1b"
      }
    }
  }
}